{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es5", "es2015.promise"],
        "module": "amd",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "./**/*.ts"
    ]
}
